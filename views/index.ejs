<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script type="text/javascript" src="/socket.io/socket.io.js"></script>
	<title>Colors</title>
	<script>
			$(document).ready(function() {
	
				var socket = io();
				$('#success').click(function(){
					socket.emit('clicked', {color : 'success'})
				})
				$('#primary').click(function(){
					socket.emit('clicked', {color : 'primary'})
				})
				$('#warning').click(function(){
					socket.emit('clicked', {color : 'warning'})
				})
				socket.on('update_Color', function(data){
					var color = data.color
					console.log(color)
					$('#background').removeClass().addClass("bg-"+color)
				})
				
			})
	
		</script>
</head>
<body>
	<div class="bg-success" id="background">
		<br>
		<br>
		<br>
		<br>
		<div class="container text-center">
			<div class="row">
				<div class="col border-black bg-light rounded p-4 m-2" id="success">
					<h4>Green</h4>
				</div>
				<div class="col border-black bg-light rounded p-4 m-2" id="primary">
					<h4>Blue</h4>
				</div>
				<div class="col border-black bg-light rounded p-4 m-2" id="warning">
					<h4>Yellow</h4>
				</div>
			</div>
		</div>
		<br>
		<br>
		<br>
		<br>

	</div>
	
</body>
</html>